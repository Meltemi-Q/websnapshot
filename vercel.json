{
  "version": 2,
  "functions": {
    "api/screenshot.js": {
      "maxDuration": 60,
      "memory": 1024,
      "runtime": "nodejs22.x"
    }
  },
  "routes": [
    {
      "src": "/api/screenshot",
      "dest": "api/screenshot.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 